
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@user) do %>
						<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @user.name %>
						<% end %>
					</td>
					<td><%= link_to @b.title, @b %></td>
					<td><%= @b.body %></td>
					<td>
						<%= render 'books/favorite', book: @b %>
					</td>
					<td>
						<span>コメント数：</span>
						<a href="#comments"><%= @b.book_comments.count %></a>
					</td>
					<% if @user == current_user %>
					<td><%= link_to "Edit",edit_book_path(@b), class: "btn-sm btn-success edit_book_#{@b.id}" %></td>
					<td><%= link_to "Destroy", @b, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@b.id}" %></td>
					<% end %>
				</tr>
		</table>

		<ul>
		    <% @b.book_comments.each do |book_comment| %>
		        <li class="comment">
		        	<span class="avater">
		        	<%= link_to (book_comment.user) do %>
                    <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
                    <%= book_comment.user.name %>
                    <% end %>
	                </span>
                    <%= book_comment.comment %>
                    <% if book_comment.user == current_user %>
                    <%= link_to "Destroy", book_comment_path(book_comment.id), method: :delete, class: "btn-sm btn-danger destroy_book_#{@b.id}" %>
                    <% end %>
		        </li>
		    <% end %>
		</ul>


		<%= form_for [@b, @book_comment] do |f| %>
			<%= f.text_area :comment, rows:'5', class: "form-control" %>

			<%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
		<% end %>
	</div>
</div>

