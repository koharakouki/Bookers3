
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @book.user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: Book.new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<%= render 'books/detail', book: @book %>

		<div id="comment-box">
			<%= render partial: 'books/comment_and_form', locals: { book_comments: @book_comments, book: @book, book_comment: @book_comment } %>
		</div>

	</div>
</div>

